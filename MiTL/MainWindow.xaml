        <Button
            x:Name="FlyoutButton"
            Margin="6,30,452,309"
            HorizontalContentAlignment="Center"
            Background="Transparent"
            Click="FlyoutButton_OnClick"
            Cursor="Hand"
            FontSize="35"
            MouseEnter="FlyoutButton_OnMouseEnter"
            MouseLeave="FlyoutButton_OnMouseLeave"
            RenderTransformOrigin="0.5,0.5"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Image
                x:Name="FlyoutButtonImage"
                Height="25"
                RenderTransformOrigin="0.5,0.5"
                Source="Resources/Image_Settings.png" />
            <Button.RenderTransform>
